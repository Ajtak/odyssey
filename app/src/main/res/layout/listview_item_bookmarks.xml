<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/material_standard_horizontal_spacing"
    android:minHeight="@dimen/material_list_item_height">


    <TextView
        android:id="@+id/item_bookmarks_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="sans-serif-regular"
        android:textSize="@dimen/material_font_style_size_subheading" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_bookmarks_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/item_bookmarks_numberOfTracks"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="sans-serif-regular"
            android:textSize="@dimen/material_font_style_size_body_1" />

        <TextView
            android:id="@+id/item_bookmarks_numberOfTracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="sans-serif-regular"
            android:textSize="@dimen/material_font_style_size_body_1" />
    </RelativeLayout>

</LinearLayout>