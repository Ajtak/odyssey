<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/notification_big_image"
        android:layout_width="@dimen/notification_big_height"
        android:layout_height="@dimen/notification_big_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/cover_placeholder_96dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notification_big_buttons"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notification_big_image"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_padding_medium"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/notification_big_close"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notification_big_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/notification_font_size_medium" />

            <TextView
                android:id="@+id/notification_big_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <TextView
                android:id="@+id/notification_big_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/notification_big_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_clear_24dp"
            android:tint="@color/colorTextLight"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/notification_big_buttons"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/notification_big_image"
        android:divider="@drawable/notification_divider"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <ImageButton
            android:id="@+id/notification_big_previous"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_skip_previous_24dp"
            android:tint="@color/colorTextLight"/>

        <ImageButton
            android:id="@+id/notification_big_play"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_play_arrow_24dp"
            android:tint="@color/colorTextLight"/>

        <ImageButton
            android:id="@+id/notification_big_next"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_skip_next_24dp"
            android:tint="@color/colorTextLight"/>
    </LinearLayout>

</RelativeLayout>