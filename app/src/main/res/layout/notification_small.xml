<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/notification_small_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/cover_placeholder_96dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_padding_medium"
        android:layout_marginTop="@dimen/standard_padding_medium"
        android:layout_marginBottom="@dimen/standard_padding_medium"
        android:layout_toEndOf="@+id/notification_small_image"
        android:layout_toStartOf="@+id/notification_small_buttons"
        android:orientation="vertical" >

            <TextView
                android:id="@+id/notification_small_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/notification_font_size_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/notification_small_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/notification_font_size_small"
                />


            <TextView
                android:id="@+id/notification_small_separator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/separator"
                android:textSize="@dimen/notification_font_size_small"/>

            <TextView
                android:id="@+id/notification_small_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/notification_font_size_small" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_small_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        >
        <ImageButton
            android:id="@+id/notification_small_play"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_play_arrow_24dp"
            android:tint="@color/colorTextLight"
            />

        <ImageButton
            android:id="@+id/notification_small_next"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_skip_next_24dp"
            android:tint="@color/colorTextLight"
            />

    </LinearLayout>

</RelativeLayout>