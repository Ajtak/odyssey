<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.odyssey.views.NowPlayingLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/dragLayout">

        <RelativeLayout
            android:id="@+id/now_playing_headerLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView2"
                android:src="@drawable/cover_placeholder"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toEndOf="@+id/imageView2"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/imageButton">

                <TextView
                    android:id="@+id/now_playing_trackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wild Ones"
                    android:maxLines="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/now_playing_trackArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You Me At Six"
                        android:maxLines="1" />

                    <TextView
                        android:id="@+id/now_playing_trackArtistAlbumSeparator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/separator" />

                    <TextView
                        android:id="@+id/now_playing_trackAlbum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cavalier Youth"
                        android:maxLines="1" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton"
                android:src="@drawable/ic_play_arrow_24dp"
                android:background="?android:selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="false"
                android:baselineAlignBottom="false"
                android:cropToPadding="false"
                android:tint="@color/colorTextLight" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/now_playing_bodyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/now_playing_headerLayout"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/now_playing_coverLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/now_playing_control_layout">
                <ImageView
                    android:id="@+id/now_playing_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/cover_placeholder"
                    android:background="@color/colorPrimaryDark"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/now_playing_control_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:paddingBottom="48dp">
                <RelativeLayout
                    android:id="@+id/now_playing_seekBarLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/now_playing_elapsedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/now_playing_seekBar"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/now_playing_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/now_playing_seekBar"
                        android:gravity="center" />

                    <SeekBar
                        android:id="@+id/now_playing_seekBar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:id="@+id/now_playing_buttonLayout"
                    android:background="?attr/colorPrimary">

                    <ImageButton
                        android:id="@+id/now_playing_repeatButton"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tint="@color/colorTextLight"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_repeat_24dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/now_playing_previousButton"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tint="@color/colorTextLight"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_skip_previous_24dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/now_playing_playPauseButton"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tint="@color/colorTextLight"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_play_circle_fill_24dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/now_playing_nextButton"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tint="@color/colorTextLight"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_skip_next_24dp"
                        android:scaleType="fitCenter"/>

                    <ImageButton
                        android:id="@+id/now_playing_randomButton"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:tint="@color/colorTextLight"
                        android:background="?android:selectableItemBackground"
                        android:src="@drawable/ic_shuffle_24dp"
                        android:scaleType="fitCenter" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </org.odyssey.views.NowPlayingLayout>
</FrameLayout>