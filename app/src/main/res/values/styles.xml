<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:alertDialogTheme">@style/ContextMenuTheme</item>
        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <item name="android:textColorPrimaryInverse">@color/colorTextLight</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="ContextMenuTheme" parent="android:Theme.Material.Dialog.Alert">
    </style>

    <style name="AppTheme.NavDrawer" parent ="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

</resources>
